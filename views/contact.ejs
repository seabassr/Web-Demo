<%- include('layouts/header.ejs') %>
    
    <br>

    <!-- Start of image -->
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <img src="img/me/me3.png" alt="memoji" width="10%">
            </div>
        </div>
    </div>
    <!-- End of image -->

    <br>

    <!-- Start of contact form -->
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-5 text-center contactform p-5">
                <form action="/submitContact" method="post">
                    <h3 class="mb-4">Contact us</h3>
                    <input type="text" class="form-control mb-4" name="fname" aria-describedby="firstname" placeholder="First Name">
                    <input type="text" class="form-control mb-4" name="lname" aria-describedby="lastname" placeholder="Last Name">
                    <input type="email" class="form-control mb-4" name="email" aria-describedby="emailHelp" placeholder="Email">
                    <label for="selection" class="form-label">Reason for contact:</label>
                    <select class="form-select mb-4" aria-label="Default select example" name="reason">
                        <option selected value="Bug">Bug</option>
                        <option value="Opportunity">Opportunity</option>
                        <option value="Connect">Connect</option>
                    </select>
                    <textarea class="form-control mb-4" name="comment" rows="3" placeholder="Comment"></textarea>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-5">
                <!--Google map-->
                <div id="map-container-google-1" class="z-depth-1-half map-container" style="height: 100%">
                    <iframe src="https://maps.google.com/maps?q=manhatan&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0"
                    style="width: 100%; height: 100%;" allowfullscreen></iframe>
                </div>
                <!--Google Maps-->
            </div>
        </div>
    </div>
    <!-- End of contact form -->

    <br>

    <!-- Start of social info-->
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h5>Social Information</h5>
            </div>
        </div>
        <div class="row">
            <div class="col text-center contactsocial">
                <img src="img/social/github.png" alt="github" width="8%" class="contactleft">
            </div>
            <div class="col text-center">
                <img src="img/social/linkedin.png" alt="linkedin" width="8%" class="contactright">
            </div>
        </div>
    </div>
    <!-- End of social info-->

<%- include('layouts/footer.ejs') %>